<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.mycompany.lista9.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>LoginUserServlet</servlet-name>
    </filter-mapping>
    <listener>
        <description>HttpSessionAttributeListener</description>
        <listener-class>com.mycompany.lista9.LoggedUserListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.mycompany.lista9.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUserServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.user.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUserServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.user.LoginUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutUser</servlet-name>
        <servlet-class>com.mycompany.lista9.user.LogoutUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.post.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePostServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.post.CreatePostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAnswerServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.answer.CreateAnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPostsServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.post.UserPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAnswersServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.answer.UserAnswersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>com.mycompany.lista9.user.UserProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUserServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutUser</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePostServlet</servlet-name>
        <url-pattern>/createpost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAnswerServlet</servlet-name>
        <url-pattern>/createanswer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPostsServlet</servlet-name>
        <url-pattern>/myposts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAnswersServlet</servlet-name>
        <url-pattern>/myanswers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainServlet</welcome-file>
    </welcome-file-list>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <context-param>
        <param-name>numOfPosts</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>loggedInUsers</param-name>
        <param-value>0</param-value>
    </context-param>
</web-app>
