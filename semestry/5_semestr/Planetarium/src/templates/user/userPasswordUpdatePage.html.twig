<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/index.css?v=1.1">
    <title>Dane użytkownika</title>
</head>

<body>
    <div class="header">
        <a href="/">
            <div class="logo">
                <h1>Planetarium <i class="material-icons">rocket_launch</i></h1>
            </div>
        </a>
        <div class="panel panelRight">
            <div class="profile">
                <a href="/" class="linkButton smallLink">
                    <i class="material-icons">home</i>
                    <p>Strona główna</p>
                </a>
                <a href="/user" class="linkButton smallLink">
                    <i class="material-icons">person</i>
                    <p>Twój Profil</p>
                </a>
                <a href="/logout" class="linkButton smallLink">
                    <i class="material-icons">logout</i>
                    <p>Wyloguj się</p>
                </a>
                {% if userData.Przywileje == 2 %}
                    <a href="/" class="linkButton smallLink">
                        <i class="material-icons">cart</i>
                        <p>Kosz</p>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="adminPanel panelRight">
            {% if userData.Przywileje == 2 %}
                <a href="/user" class="linkButton smallLink">
                    <i class="material-icons">arrow_back</i>
                    <p>Wróć</p>
                </a>
            {% elseif userData.Przywileje == 3 or userData.Przywileje == 4 %}
                <a href="/workers" class="linkButton smallLink">
                    <i class="material-icons">arrow_back</i>
                    <p>Wróć do pracowników</p>
                </a>
            {% endif %}
        </div>
    </div>

    <div>
        <form action="/update/password/user" method="post" class="centerForm" style="grid-template-columns: repeat(1, minmax(200px, 1fr)); width: 400px">
            <h3>Zmień hasło</h3>

            <div class="fullSpan">                
                {% for error in errors %}
                    <h6>{{ error }}</h6>
                {% endfor %}
            </div>

            <div class="formPart">
                <label for="oldPassword">Stare hasło</label>
                <input type="password" name="oldPassword" id="oldPassword">

                <label for="newPassword">Nowe hasło</label>
                <input type="password" name="newPassword" id="newPassword">

                <label for="newPasswordRepeat">Powtórz nowe hasło</label>
                <input type="password" name="newPasswordRepeat" id="newPasswordRepeat">
            </div>

            <input type="submit" value="Zatwierdź zmiany" class="fullSpan">
        </form>
    </div>

    <script src="/js/showLinkName.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>